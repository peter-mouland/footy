
.underlay {
  position fixed
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
  content:"";
  background-image:url('../images/backgrounds/deancourt-1280.jpg');
  background-repeat:no-repeat;
  background-position-x:center;
  background-position-y:-90px;
  filter(blur(1px));
  z-index:-1;
}

h1 {
  text-transform uppercase
  padding 2.7em 0
  line-height 1em
  font-size 3em
  text-align center
  text-shadow 0 0 10px #000
  letter-spacing 10px
  font-weight 200
}



@media less-than-small {
  h1{
    font-size: 2em;
  }
}
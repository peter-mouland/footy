
.underlay {
  position fixed
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
  content:"";
  opacity:0.75;
  background-image:url('../images/backgrounds/deancourt-1280.jpg');
  background-repeat:no-repeat;
  background-position-x:center;
  background-position-y:-90px;
  filter(blur(1px));
  z-index:-1;
}

h1 {
  text-transform uppercase
  padding: 1.5em 0;
  line-height 1em
  font-size 3em
  text-align center
  text-shadow 0 0 10px rgba(0,0,0,0.5)
  letter-spacing 10px
  font-weight 200
}

.header .icon-menu{
  font-size: 32px;
  text-shadow 0 0 10px rgba(0,0,0,0.5)
  color #fff
  position: absolute;
  top: 12px;
  right: 22px;
  padding: 0 22px 2px;
  border-radius: 5px;
  &:hover, &:focus, &:active{
    background rgba(75,0,0,0.5)
    text-decoration none
  }
}

.main-menu{
  position absolute
  top 52px
  right 22px
  display none
  li{
    background rgba(75,0,0,0.5)
    text-align: right
    font-weight: 100
    a {
      display block
      line-height 2em
      padding: 0 20px;
      color #fff
      letter-spacing 5px
      text-shadow 0 0 10px #000
      &:hover{
        background rgba(0,0,0,0.5)
      }
    }
  }
    &:target{
      display block
    }
}

.footer{
  position fixed
  bottom 0

  z-index:-1;
}
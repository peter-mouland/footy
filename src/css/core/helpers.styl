.left {
  float: left!important;
}

.right {
  float: right!important;
}

.clear {
  clear: both;
}

.internal-link{
  outline: 0!important;
  border: 0;
}

.animate {
  -webkit-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
  -moz-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
  -ms-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
  -o-transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
  transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s;
}
.full-height{
  height:100%;
}

.ellipsis{
  ellipsis();
}

.clearfix{
  clearfix();
}

.sticky{
  sticky();
}

.speak{
  speak();
}

.rotate-180 {
  transform(rotate(180deg));
}

.visible-touch,
.hidden{
  display:none !important;
}
body .touch-device .visible-touch,
body .visible{
  display: inherit;
}


html{
  /* Orientation */
  &:before {
    display:none;
    @media (orientation:portrait) {
      content: 'portrait';
      font-family:'portrait';
    }
    @media (orientation:landscape) {
      content: 'landscape';
      font-family:'landscape';
    }
  }
  /* view */
  &:after {
    display:none;
    @media (max-width:small-screen) {
      content: 'mobile';
      font-family:'mobile';
    }
    @media (min-width:small-screen+1) {
      content: 'desktop';
      font-family:'desktop';
    }
  }
}




//DESKTOP ONLY CLASSES
@media (min-width: small-screen+1) {
  .sticky-desktop {
    sticky();
  }
  .ellipsis-desktop {
    ellipsis();
  }
  .speak-desktop{
    speak();
  }
  .visible-mobile,
  .hidden-desktop{
    display:none!important;
  }

}

//MOBILE ONLY CLASSES
@media (max-width: small-screen) {
  body .sticky-mobile{
    sticky();
  }
  .ellipsis-mobile {
    ellipsis();
  }
  .speak-mobile{
    speak();
  }
  .visible-desktop,
  .hidden-mobile{
    display:none!important;
  }
}